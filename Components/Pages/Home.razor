@page "/"
@using EventEase.Services
@inject UserSessionService UserSessionService
@inject NavigationManager Navigation

<PageTitle>Home - EventEase</PageTitle>

<div class="home-page">
    <div class="hero-section">
        <div class="container">
            <h1 class="display-4">Welcome to EventEase</h1>
            <p class="lead">Discover and register for exciting events happening near you</p>
            <div class="hero-actions">
                <a href="/events" class="btn btn-primary btn-lg">Browse Events</a>
                <a href="/my-events" class="btn btn-outline-secondary btn-lg">My Events</a>
            </div>
        </div>
    </div>

    <div class="features-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4 feature-card">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="feature-icon">
                                <span class="bi bi-calendar-event"></span>
                            </div>
                            <h3>Discover Events</h3>
                            <p>Browse through a curated selection of exciting events from tech conferences to music festivals.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 feature-card">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="feature-icon">
                                <span class="bi bi-person-check"></span>
                            </div>
                            <h3>Easy Registration</h3>
                            <p>Simple and secure registration process with instant confirmation for all events.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 feature-card">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="feature-icon">
                                <span class="bi bi-bookmark-star"></span>
                            </div>
                            <h3>Track Attendance</h3>
                            <p>Keep track of all events you've registered for in one convenient location.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="session-info-section">
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <h4>Your Session</h4>
                    <p><strong>Visit Count:</strong> @SessionStats.TotalVisits</p>
                    <p><strong>First Visit:</strong> @SessionStats.FirstVisit.ToString("MMM dd, yyyy HH:mm")</p>
                    <p><strong>Registered Events:</strong> @RegisteredEventCount</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private (DateTime FirstVisit, DateTime LastVisit, int TotalVisits) SessionStats;
    private int RegisteredEventCount;

    protected override void OnInitialized()
    {
        SessionStats = UserSessionService.GetSessionStats();
        RegisteredEventCount = UserSessionService.GetRegisteredEventIds().Count;
    }
}
